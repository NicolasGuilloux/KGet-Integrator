{
    "name": "KGet Integration",
    "description": "KGet Browser Integration extension.",
    "short_name": "KGet",
    "homepage_url": "https://github.com/NicolasGuilloux/KGet-Integrator",
    "version": "1.1.1",
    "manifest_version": 2,
    "minimum_chrome_version": "19.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": "icon_32.png",
        "default_popup": "popup.html"
    },
    "commands": {
        "toggle-interruption": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Toggle interruption"
        }
    },
    "icons": {
        "32": "icon_32.png",
        "48": "icon_48.png",
        "64": "icon_64.png",
        "128": "icon_128.png"
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "nativeMessaging",
        "contextMenus",
        "downloads",
        "storage",
        "cookies",
        "activeTab",
        "tabs"
    ]
}
